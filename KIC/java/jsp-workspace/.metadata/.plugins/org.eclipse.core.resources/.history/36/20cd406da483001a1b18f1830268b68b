	<script type="text/javascript">
		var today = new Date();
		
		console.log(today);
		console.log(today.toString());
		console.log(today.toLocaleString());
		console.log(today.toLocaleString().length);
		
		//날짜 (문자열 조작해서 가져옴)
		var date = today.toLocaleString();
		var day = date.substring(0, 19);
		console.log(day);
		console.log(day.length);
		
		//그러기 싫다면..
		console.log(today.getFullYear());
		console.log(today.getMonth() + 1);
		console.log(today.getDate());//일
		console.log(today.getDay());//주에서 일
		

		//타임스탬프 time stamp
		console.log(today.getTime());
		
		//--------------- project -----------------
		
		console.log( Math.floor(new Date() / 1000));
		console.log( Math.floor(new Date() / 1000) % 60 );
		
		var nowT = Math.floor(new Date() / 1000);
		var cc = Math.floor(new Date() / 1000) % 60;
		var standardT = nowT - cc;
		
		setInterval(function() {
			console.log('타임스탬프 ' + (Math.floor(new Date() / 1000) - standardT ));//초 단위 얻기
		}, 1000);
	</script>
