			var info3 = 'symbolB=USD;expires=' + date.toString();
			

			document.cookie = info1;
			document.cookie = info2;
			document.cookie = info3;
			
			console.log("쿠키생성");
		}

		document.getElementById('btn2').onclick = function() {
			var cookies = document.cookie;
			cookies.trim();
			cookies = cookies.split('; ');
			
			console.log(cookies);
			
			var result = '{';
			
			cookies.forEach( function(elt) {
				result += '/"' + elt.split('=')[0] + '/":/"' + elt.split('=')[1] + '/",';				
			} );
			
			result = result.substr(0, result.length - 1);
			
			result += '}';

			console.log(result);
			console.log(JSON.parse(result));
			
			
/* 
			var key = cookies.split('=')[0];
			var value = cookies.split('=')[1];
			
